<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eth_select_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:text="ETH合约"
            android:textColor="@color/text_z1" />

        <TextView
            android:id="@+id/btc_select_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text="BTC合约"
            android:textColor="@color/text_z1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/this_week_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:text="当周"
            android:textColor="@color/text_z1" />

        <TextView
            android:id="@+id/next_week_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text="次周"
            android:textColor="@color/text_z1" />


        <TextView
            android:id="@+id/quarter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:text="季度"
            android:textColor="@color/text_z1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/long_select_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:text="做多"
            android:textColor="@color/text_z1" />

        <TextView
            android:id="@+id/short_select_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text="做空"
            android:textColor="@color/text_z1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leverage_1x_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="10dp"
            android:text="1x"
            android:textColor="@color/text_z1" />

        <TextView
            android:id="@+id/leverage_5x_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="10dp"
            android:text="5x"
            android:textColor="@color/text_z1" />

        <TextView
            android:id="@+id/leverage_10x_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="10dp"
            android:text="10x"
            android:textColor="@color/text_z1" />

        <TextView
            android:id="@+id/leverage_20x_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="10dp"
            android:text="20x"
            android:textColor="@color/text_z1" />

    </LinearLayout>

    <EditText
        android:id="@+id/buy_price"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="开仓价格"
        android:inputType="numberDecimal"
        android:textColor="@color/text_z1"
        android:textColorHint="@color/as_z6" />

    <EditText
        android:id="@+id/buy_count"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="开仓数量"
        android:inputType="numberDecimal"
        android:textColor="@color/text_z1"
        android:textColorHint="@color/as_z6" />

    <EditText
        android:id="@+id/warning_price"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="警告涨跌幅"
        android:inputType="numberDecimal"
        android:textColor="@color/text_z1"
        android:textColorHint="@color/as_z6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/now_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="现价:"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/income_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="收益:%"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/alarm_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:text="开始提醒"
        android:textColor="@color/myColor"
        android:textSize="20sp" />
</LinearLayout>
